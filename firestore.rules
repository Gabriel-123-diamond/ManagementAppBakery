rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // ====================================================================
    // ‚ö†Ô∏è DEVELOPMENT & SEEDING-ONLY RULES - INSECURE ‚ö†Ô∏è
    // ====================================================================
    // This ruleset allows ANYONE to read and write all data to your 
    // database. This is required for the "Database Tools" page to seed
    // data without needing user authentication.
    //
    // üõë CRITICAL: BEFORE GOING TO PRODUCTION, you MUST replace these 
    // rules with secure, role-based rules that protect your data.
    // Failure to do so will leave your application open to anyone on
    // the internet.
    // ====================================================================

    match /{document=**} {
      allow read, write: if true;
    }
  }
}
