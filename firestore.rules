rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read for app configuration needed on login page.
    // Only authenticated users can write to settings.
    match /settings/app_config {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow any authenticated user to read/write to these collections.
    // This is a secure default for an internal tool where all users are trusted staff.
    match /staff/{userId} {
      allow read, write: if request.auth != null;
    }

    match /products/{productId} {
      allow read, write: if request.auth != null;
    }
    
    match /ingredients/{ingredientId} {
      allow read, write: if request.auth != null;
    }

    match /recipes/{recipeId} {
      allow read, write: if request.auth != null;
    }

    match /suppliers/{supplierId} {
      allow read, write: if request.auth != null;
    }

    match /customers/{customerId} {
      allow read, write: if request.auth != null;
    }

    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }

    match /transfers/{transferId} {
      allow read, write: if request.auth != null;
    }

    match /production_batches/{batchId} {
      allow read, write: if request.auth != null;
    }
    
    match /waste_logs/{logId} {
      allow read, write: if request.auth != null;
    }
    
    match /attendance/{attendanceId} {
      allow read, write: if request.auth != null;
    }

    match /announcements/{announcementId} {
      allow read, write: if request.auth != null;
    }
    
    match /reports/{reportId} {
      allow read, write: if request.auth != null;
    }

    match /payment_confirmations/{confirmationId} {
        allow read, write: if request.auth != null;
    }
    
    match /sales/{saleId} {
        allow read, write: if request.auth != null;
    }
    
    match /directCosts/{costId} {
        allow read, write: if request.auth != null;
    }

    match /indirectCosts/{costId} {
        allow read, write: if request.auth != null;
    }
    
    match /wages/{wageId} {
        allow read, write: if request.auth != null;
    }
    
    // Subcollections
    match /staff/{staffId}/personal_stock/{stockId} {
        allow read, write: if request.auth != null;
    }
  }
}
